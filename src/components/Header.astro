---
// Importações de ativos e componentes
import Logo from '../assets/planogen.png'
---

<header class="nav">
    <div class="container row">
        <div class="nav-logo one-third column">
            <a href="/" class="logo-link">
                <img src={Logo} alt="Brand logo">
            </a>
        </div>
        <nav class="one-third column">
            <ul class="center flex">
                <li><a href="#features">Conheça</a></li>
                <li><a href="#pricing">Preços</a></li>
                <li><a href="#customers">Clientes</a></li>
            </ul>
        </nav>
        <div class="nav-cta one-third column">
            <a href="gerar" class="button button-primary">Começar</a>
        </div>
    </div>
</header>

<style lang="scss">
.nav {
    padding: 15px 0;
    li {
        list-style: none;
        margin-top: 7px;
    }
    .nav-cta {
        text-align: right;
    }
    a:not(.button):not(.logo-link) {
        color: #111;
        padding: 0 20px;
        text-decoration: none;
    }
    .logo-link img {
        width: 140px;
    }
    @media (max-width: 700px) {
        nav {
            display: none;
        }
        .nav-cta {
            position: absolute;
            right: 20px;
        }
    }
}
</style>
